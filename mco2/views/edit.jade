doctype html
html
  head
    title hello
    link(rel='stylesheet', href='/stylesheets/style.css')

body
    block movie
    .movie
        h3 Edit Movie Data
        form(action="/edit/#{data.movie_id}", method="post") 
            b Movie Name
                input(id="MovieInfo", type="text", placeholder="Movies Name", name="name", value="#{data.movie_name}")
            b Movie Year
                input(id="MovieInfo", type="text", placeholder="Movies Year", name="year", value="#{data.movie_year}")
            b Movie Rank
                input(id="MovieInfo", type="text", placeholder="Movies Rank", name="rank", value="#{data.movie_rank}")
            button.btn#Upd Update
            button.btn#Del Delete